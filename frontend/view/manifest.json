{
	"manifest_version": 2,
	"name": "hotkey",
	"description": "share and manage your accounts",
	"version": "0.1",

	"browser_action": {
		//"default_icon": "/Icons/icon.png",
		"default_popup": "popup.html",
		"default_title": "Share with friends"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"run_at": "document_end",
			"js": ["jquery-2.2.0.min.js", "autofill.js"]
		}
	],

	"permissions": [
		   "tabs", 
		   "notifications",
		   "storage"
	]
}
