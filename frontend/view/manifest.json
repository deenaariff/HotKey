{
	"manifest_version": 2,
	"name": "hotkey",
	"description": "share and manage your accounts",
	"version": "0.1",

	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "Share with friends"
	},

	"content_scripts": [
		{
			"all_frames": true,
			"matches": ["<all_urls>"],
			"run_at": "document_end",
			"js": ["jquery-2.2.0.min.js", "autofill.js"]
		}
	],

"background": {
    "scripts": [
    "background.js"
    ],
    "persistent": false
  },

  "permissions": [
   "tabs", 
   "http://*/",
   "http://*/*", 
   "https://*/*",
    "activeTab",
    "notifications",
    "storage"
  ]
}
